      "title": "GPU Utilization per Device",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "DCGM_FI_DEV_GPU_UTIL",
          "legendFormat": "GPU {{gpu}} - {{GPU_I_NAME}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 30 },
              { "color": "green", "value": 50 },
              { "color": "orange", "value": 95 }
            ]
          }
        }
      }
    },
    {
      "title": "GPU Memory Usage (MiB)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "DCGM_FI_DEV_FB_USED",
          "legendFormat": "GPU {{gpu}} Used",
          "refId": "A"
        },
        {
          "expr": "DCGM_FI_DEV_FB_FREE",
          "legendFormat": "GPU {{gpu}} Free",
          "refId": "B"
        }
      ],
      "fieldConfig": {
