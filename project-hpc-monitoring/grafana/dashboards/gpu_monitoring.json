    {
      "title": "Memory Bandwidth Utilization",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 14 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "DCGM_FI_PROF_DRAM_ACTIVE * 100",
          "legendFormat": "GPU {{gpu}} Mem BW %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percent", "min": 0, "max": 100 }
      }
    },
